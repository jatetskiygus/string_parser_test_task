<Window x:Class="test_task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:test_task"
        xmlns:vm="clr-namespace:test_task.ViewModels"
        Title="Text Analyzer" Height="300" Width="500">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox AcceptsReturn="True"
                 Grid.Row="0"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Text="{Binding InputText}"
                 Height="80"
                 Margin="0,0,0,10"
                 FontSize="14">
        </TextBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="AnalyzeButton"
                            Content="Анализировать"
                            Command="{Binding AnalyzeCommand}"
                            Background="AliceBlue"
                            Foreground="Black"/>

                    <Button Content="Очистить"
                            Background="Gray"
                            Command="{Binding ClearCommand}">
                    </Button>
        </StackPanel>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="10,5,0,0" 
                    VerticalAlignment="Top">
            
            <Button Command="{Binding AddFileCommand}"
                    Width="36" Height="31"
                    ToolTip="Прикрепить файл">
                    <TextBlock FontSize="24" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   Text="📎">
                    </TextBlock>
            </Button>
            
            <TextBlock Width="100"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Text="{Binding SelectedFileName}">
            </TextBlock>
                
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="3" Margin="7,42,0,0">
                      <TextBlock TextWrapping="Wrap" 
                                 FontSize="14"
                                 Text="{Binding AnalysisResult}"
                                 Foreground="DarkSlateGray">
                      </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
